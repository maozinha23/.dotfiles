# dunst documentation:
# https://dunst-project.org/documentation/

[global]
    ### Geometry ###

    # The width of the window, excluding the frame.
    # dynamic width from 0 to 300
    # width = (0, 300)
    # constant width of 300
    #width = 300
    width = (830, 830)

    # The height of a single notification, excluding the frame.
    # dynamic height from 0 to 300
    #height = (0, 300)
    # constant height of 300
    # height = 300
    # NOTE: Dunst from version 1.11 and older don't support dynamic height
    #       and the given value is treated as the maximum height
    height = (22, 22)

    # Position the notification in the top right corner
    #origin = top-right
    origin = top-left

    # Offset from the origin
    # NOTE: Dunst from version 1.11 and older use this alternative notation
    # offset = 10x50
    #offset = (10, 50)
    offset = (260, 0)

    ### Progress bar ###
    # Padding between text and separator.
    #padding = 8
    padding = 0

    # Horizontal padding.
    #horizontal_padding = 8
    horizontal_padding = 0

    # Defines width in pixels of frame around the notification window.
    # Set to 0 to disable.
    #frame_width = 3
    frame_width = 2

    # Defines color of the frame around the notification window.
    #frame_color = "#aaaaaa"
    frame_color = "#FFFFFF"

    ### Text ###

    #font = Monospace 8
    font = Terminess Nerd Font Mono 12

    # The format of the message.  Possible variables are:
    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    #   %n  progress value if set without any extra characters
    #   %%  Literal %
    # Markup is allowed
    #format = "<b>%s</b>\n%b"
    format = "<b>%s</b> - %b"

    # Alignment of message text.
    # Possible values are "left", "center" and "right".
    #alignment = left
    alignment = center

    ### Icons ###

    # Recursive icon lookup. You can set a single theme, instead of having to
    # define all lookup paths.
    #enable_recursive_icon_lookup = false
    enable_recursive_icon_lookup = true

    # Align icons left/right/top/off
    #icon_position = left
    icon_position = off

    ### History ###

    ### Misc/Advanced ###

    ### Legacy

    ### mouse

[urgency_low]
    # IMPORTANT: colors have to be defined in quotation marks.
    # Otherwise the "#" and following would be interpreted as a comment.
    #background = "#222222"
    background = "#555555"
    #foreground = "#888888"
    foreground = "#FFFFFF"
    timeout = 10
    # Icon for notifications with low urgency
    #default_icon = dialog-information

[urgency_normal]
    #background = "#285577"
    background = "#FFFF55"
    #foreground = "#ffffff"
    foreground = "#000000"
    timeout = 10
    override_pause_level = 30
    # Icon for notifications with normal urgency
    #default_icon = dialog-information

[urgency_critical]
    #background = "#900000"
    background = "#AA0000"
    #foreground = "#ffffff"
    foreground = "#FFFFFF"
    #frame_color = "#ff0000"
    timeout = 0
    override_pause_level = 60
    # Icon for notifications with critical urgency
    #default_icon = dialog-warning
